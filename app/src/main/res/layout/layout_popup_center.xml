<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    app:bl_corners_radius="@dimen/dp_4"
    app:bl_shape="rectangle"
    app:bl_solid_color="@color/white">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dp.20"
        android:layout_marginTop="@dimen/dp.30"
        android:textColor="@color/black_121"
        android:textSize="@dimen/sp.19"
        android:textStyle="bold" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp.20"
        android:gravity="center"
        android:maxLines="15"
        android:paddingHorizontal="@dimen/dp.25"
        android:textColor="@color/black_121"
        android:textSize="@dimen/sp.18" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp.0.5"
        android:background="@color/grey_1a0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp.12"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/grey_666"
            android:textSize="@dimen/sp.18" />

        <View
            android:layout_width="@dimen/dp.0.5"
            android:layout_height="match_parent"
            android:background="@color/grey_1a0" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp.12"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/blue_005"
            android:textSize="@dimen/sp.18" />


    </LinearLayout>


</LinearLayout>